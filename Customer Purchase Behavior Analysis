import pandas as pd
import matplotlib.pyplot as plt
import seaborn as sns

# Load dataset (replace with actual file path)
data = pd.read_csv('customer_purchases.csv')

# Display basic info
print(data.info())
print(data.head())

# Data Cleaning (Handle missing values, duplicates, etc.)
data.dropna(inplace=True)
data.drop_duplicates(inplace=True)

# Basic Analysis
purchase_counts = data['category'].value_counts()

# Visualization
plt.figure(figsize=(10, 5))
sns.barplot(x=purchase_counts.index, y=purchase_counts.values)
plt.xticks(rotation=45)
plt.xlabel('Product Category')
plt.ylabel('Number of Purchases')
plt.title('Customer Purchase Behavior by Category')
plt.show()

# Save cleaned dataset
data.to_csv('cleaned_customer_purchases.csv', index=False)
